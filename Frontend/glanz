# REDIRECCIÓN HTTP → HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name sistemaglanz.com.mx www.sistemaglanz.com.mx;
    return 301 https://$server_name$request_uri;
}

# SERVER HTTPS
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name sistemaglanz.com.mx www.sistemaglanz.com.mx;

    # SSL
    ssl_certificate /etc/letsencrypt/live/sistemaglanz.com.mx/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/sistemaglanz.com.mx/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # =========================
    # FRONTEND (React SPA)
    # =========================
    location / {
        root /var/www/html/Glanz/dist;
        try_files $uri $uri/ /index.html;
        index index.html index.htm;
    }

    # =========================
    # BACKEND API (Laravel en puerto 3005)
    # =========================
    location /api/ {
        # CORS Preflight
        if ($request_method = OPTIONS) {
            add_header Access-Control-Allow-Origin https://sistemaglanz.com.mx;
            add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS";
            add_header Access-Control-Allow-Headers "Content-Type, Authorization";
            add_header Content-Length 0;
            return 204;
        }

        # Proxy a Laravel (puerto 3005)
        proxy_pass http://127.0.0.1:3005/api/;
        proxy_http_version 1.1;

        # Headers necesarios
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $server_name;

        # CORS
        add_header Access-Control-Allow-Origin https://sistemaglanz.com.mx always;
        add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS" always;
        add_header Access-Control-Allow-Headers "Content-Type, Authorization" always;
    }
}